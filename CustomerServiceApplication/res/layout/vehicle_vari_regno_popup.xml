<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.ttl.customersocialapp"
    android:layout_width="match_parent"
     android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:layout_gravity="center"
    android:background="#EEF2F5" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@color/yellow">
	        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Vehicle Registration"
	        android:textSize="20sp"
	        android:paddingLeft="20dp"
	        android:paddingTop="15dp"
	        android:textColor="#000000"/>
	    
	    <ImageView
	        android:id="@+id/imgclose"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/close"
	        android:scaleType="fitXY" />
	
	</RelativeLayout>
	
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="top|center"
	    android:layout_marginTop="30dp">
    	<com.ttl.customersocialapp.FloatLabelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/anim_edittext_layout"
            android:paddingLeft="10dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >
		<EditText
		    android:id="@+id/txtregnum"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:ems="10"
		    android:singleLine="true"
		    
		    android:background="@drawable/edittext_layout"
		    android:hint="Enter Registration Number"
		    android:inputType="textCapCharacters"
		    android:textAllCaps="true"
		     android:paddingLeft="10dp"
		     android:digits="0123456789AQZWSXEDCRFVTGBYHNUJMIKOLP"
                android:paddingRight="10dp"/>
		</com.ttl.customersocialapp.FloatLabelLayout>
		    
		<TextView 
		    android:layout_margin="4dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="OR" />
		<com.ttl.customersocialapp.FloatLabelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/anim_edittext_layout"
            android:paddingLeft="10dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >
		<EditText
		    android:id="@+id/txtchassisnum"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:ems="10"
		    android:singleLine="true"
	    	android:digits="0123456789AQZWSXEDCRFVTGBYHNUJMIKOLP"
		    android:background="@drawable/edittext_layout"
		    android:hint="Enter Chassis Number"
		    android:inputType="textCapCharacters"
		    android:textAllCaps="true"
		   android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
	</com.ttl.customersocialapp.FloatLabelLayout>
		<!-- <CheckBox
		    android:id="@+id/checkBox1"
		    android:layout_width="wrap_content"
		    android:layout_height="60dp"
		    android:text="@string/terms"/> -->
		
		  <Button
		            android:id="@+id/visit_site"
		            android:layout_marginTop="10dp"
		            android:layout_width="130dp"
		            android:layout_height="wrap_content"
		            android:textColor="#F5F5F5"
		            android:text="SUBMIT"
		            android:textSize="15sp"
		            android:background="@drawable/button_submit"
		            android:layout_gravity="center"
		            android:layout_marginBottom="10dp" />
	    		
	
	</LinearLayout>


</LinearLayout>
