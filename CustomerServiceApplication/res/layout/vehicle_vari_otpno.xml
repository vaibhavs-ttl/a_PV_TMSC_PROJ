<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="top|center"
	android:layout_gravity="center"
    android:background="#EEF2F5" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@color/yellow">
	        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Vehicle Registration"
	        android:textSize="20sp"
	        android:paddingLeft="20dp"
	        android:paddingTop="15dp"
	        android:textColor="#000000"/>
	    
	    <ImageView
	        android:id="@+id/imgclose"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/close"
	        android:scaleType="fitXY" />
	
	</RelativeLayout>
	
    	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="top|center">
	    
    	       <TextView 
			        android:id="@+id/txtregno"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="(Reg.No: MH05 AQ 4578)"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="13sp"
			        android:textColor="@color/black"
			        android:layout_marginTop="10dp"/>
			    
			     <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Your contact details have been Verified."
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="15sp"
			        android:textColor="@color/black"
			        android:layout_marginTop="15dp"/>
			    
			    <TextView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="We have sent an OTP to the registered"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="15sp"
			        android:textColor="@color/black"
			        android:layout_marginTop="5dp"/>
			    
			     <TextView 
			         android:id="@+id/custmobnum"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text=" Mobile Number (********69)"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="15sp"
			        android:textColor="@color/black"
			        android:layout_marginTop="5dp"/>
			      <TextView 
			         android:id="@+id/ref"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text=" Message Ref No: "
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:textSize="15sp"
			        android:textColor="@color/black"
			        android:layout_marginTop="5dp"/>
		   	    <EditText
		            android:id="@+id/edtotpno"
				    android:layout_width="200dp"
				    android:layout_height="40dp"
				    android:ems="10"
				    android:gravity="center"
				    android:singleLine="true"
			    	android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:background="@drawable/anim_edittext_layout"
				    android:hint="Enter OTP"
				    android:maxLength="5"
				    android:layout_marginTop="15dp"/>
		   	    
		   	    
		   	     <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp">
			        
			             <Button
				            android:id="@+id/visit_site"
				            android:layout_marginTop="20dp"
				            android:layout_width="130dp"
				            android:layout_height="wrap_content"
				            android:textColor="#F5F5F5"
				            android:text="SUBMIT"
				            android:textSize="15sp"
				            android:layout_marginRight="10dp"
				            android:background="@drawable/button_submit"
				            android:layout_marginBottom="10dp" />
			    		
			               <Button
				            android:id="@+id/btnresend"
				            android:layout_marginTop="20dp"
				            android:layout_width="130dp"
				            android:layout_height="wrap_content"
				            android:textColor="#F5F5F5"
				            android:text="RE-SEND OTP"
				            android:textSize="15sp"
				            android:background="@drawable/button_submit"
				            android:layout_marginBottom="10dp" />
	    
	    </LinearLayout>
	  </LinearLayout>

</LinearLayout>
