<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ttl.customersocialapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context="com.ttl.customersocialapp.LoginActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/tata_z" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/tata_service_logo" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <com.ttl.customersocialapp.FloatLabelLayout
            android:id="@+id/txtuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/anim_edittext_layout"
            app:floatLabelTextAppearance="@style/myFloatLabel" >

            <EditText
                android:id="@+id/txtuser_id"
                android:layout_width="270dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:hint="User ID"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@drawable/cursur"
                android:textSize="18sp" />
        </com.ttl.customersocialapp.FloatLabelLayout>

        <com.ttl.customersocialapp.FloatLabelLayout
            android:id="@+id/txtpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtuser"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
                android:background="@drawable/anim_edittext_layout"
                android:layout_marginTop="4dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >

            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="280dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/txtuser"
                android:layout_marginBottom="5dp"
                android:paddingLeft="12dp"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@drawable/cursur"
                android:textSize="18sp" />
        </com.ttl.customersocialapp.FloatLabelLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll"
        android:layout_below="@+id/ll"
        android:layout_marginTop="10dp"
        android:text="@string/forgotpass"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/login_line" />

    <ImageView
        android:id="@+id/imggoogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imgfacebook"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Login With"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imggoogle"
        android:layout_toRightOf="@+id/textView2"
        android:src="@drawable/twitter23" />

    <ImageView
        android:id="@+id/sign_in"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/ll"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_in" />

    <ImageView
        android:id="@+id/sign_up"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/sign_in"
        android:layout_alignBottom="@+id/sign_in"
        android:layout_toRightOf="@+id/imggoogle"
        android:background="@drawable/sign_up" />

    <ImageView
        android:id="@+id/imgfacebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/textView2"
        android:src="@drawable/facebook" />

</RelativeLayout>