<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rltl_hist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/unscheduled"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:text="Serviced At"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_dealername"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="5dip"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:padding="5dip"
                android:text="Date"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:padding="5dip"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
<LinearLayout
            android:id="@+id/ll3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:orientation="horizontal"
            android:weightSum="4" >
<TextView
                android:id="@+id/text6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:text="Dealer City"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_city"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="5dip"
                android:textSize="10sp"
                android:textStyle="bold" 
                />
            <TextView
                android:id="@+id/text5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dip"
                android:text="Dealer \nContact"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_contact"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:textSize="10sp"
                android:textStyle="bold" />

            

<!--             <ImageView -->
<!--                 android:id="@+id/downarrow_hist" -->
<!--                 android:layout_width="25dip" -->
<!--                 android:layout_height="25dip" -->
<!--                 android:layout_alignParentRight="true" -->
<!--                 android:layout_marginRight="5dip" -->
<!--                 android:src="@drawable/downarrow_hist" /> -->

<!--             <ImageView -->
<!--                 android:id="@+id/uparrow_hist" -->
<!--                 android:layout_width="25dip" -->
<!--                 android:layout_height="25dip" -->
<!--                 android:layout_alignParentRight="true" -->
<!--                 android:layout_marginRight="5dip" -->
<!--                 android:src="@drawable/uparrow" -->
<!--                 android:visibility="gone" /> -->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll3"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/text3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:text="Service type"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_serv_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="5dip"
                android:textColor="@color/red"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:padding="5dip"
                android:text="KMs"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_KM"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll2"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/text7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dip"
                android:text="Invoiced Amount"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_amount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="5dip"
                android:textSize="13sp"
                android:textStyle="bold" />
            </LinearLayout>
        <ImageView
                android:id="@+id/downarrow_hist"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/downarrow_hist" />

            <ImageView
                android:id="@+id/uparrow_hist"
                android:layout_width="25dip"
                android:layout_height="25dip"
                 android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/uparrow"
                android:visibility="gone" />
    </RelativeLayout>

    <!-- <View -->
    <!-- android:id="@+id/view" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="1dp" -->
    <!-- android:layout_below="@+id/text_KM" -->
    <!-- android:background="@color/gray_light" /> -->

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltl_hist"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone" >
    </TableLayout>

</RelativeLayout>