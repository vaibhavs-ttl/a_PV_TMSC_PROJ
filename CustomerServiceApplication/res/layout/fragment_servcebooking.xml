<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ttl.customersocialapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_medium_transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Servicebbok"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/service_booking" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/yellow"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Service Booking"
                    android:textColor="@color/black"
                    android:textSize="10pt" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@color/blue_light_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:src="@drawable/vehicledetails_1" />

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:src="@drawable/orangerightarrow" />

            <TextView
                android:id="@+id/text_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="VEHICLE DETAILS"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/yellow" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <Spinner
                android:id="@+id/spinner_regNo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_sipnner"
                android:paddingLeft="5dp" />

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_varient"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:editable="false"
                    android:hint="Vehicle Variant"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_model"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:editable="false"
                    android:hint="Vehicle Model"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@color/blue_light_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:src="@drawable/complaintcustomerdetails" />

            <ImageView
                android:id="@+id/img_arrow1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:src="@drawable/orangerightarrow" />

            <TextView
                android:id="@+id/text_cust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="CUSTOMER DETAILS"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/yellow" />

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:focusableInTouchMode="true"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_mobile"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:maxLength="10"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_fname"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:editable="false"
                    android:hint="First Name"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_lname"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:editable="false"
                    android:hint="Last Name"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@color/blue_light_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:src="@drawable/servicedetail" />

            <ImageView
                android:id="@+id/img_arrow2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:src="@drawable/orangerightarrow" />

            <TextView
                android:id="@+id/text_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="SERVICE DETAILS"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/yellow" />

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <CheckBox
                android:id="@+id/checkbox_van"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/transparent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="Tick to request for mobile service van."
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/link_costest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:text="Link to go to Cost Estimation"
                android:textStyle="bold" />

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_sipnner"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <com.ttl.customersocialapp.InstantAutoComplete
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:hint="Select Dealer City"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <Spinner
                android:id="@+id/spinner_dealer"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_sipnner"
                android:entries="@array/dealer"
                android:paddingLeft="5dip" />

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dip"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_dealerNo"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:editable="false"
                    android:hint="Dealer Contact Number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/calender_edittext"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_servicedate"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Booked for Date"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/time_edittext"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_servicetime"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Booked for Time"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <Spinner
                android:id="@+id/spinner_servicetype"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_sipnner"
                android:entries="@array/servicetype"
                android:padding="5dip" />

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_currentkm"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/edittext_layout"
                    android:hint="Current KM"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@color/blue_light_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:src="@drawable/complaintdetail" />

            <ImageView
                android:id="@+id/img_arrow3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:src="@drawable/orangerightarrow" />

            <TextView
                android:id="@+id/text_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="COMPLAINT DETAILS"
                android:textColor="@color/white"
                android:textSize="8pt" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/yellow" />

        <LinearLayout
            android:id="@+id/ll8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spinner_complainarea"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/anim_sipnner"
                android:entries="@array/complainarea"
                android:paddingLeft="5dip" />

            <Spinner
                android:id="@+id/spinner_complaindesc"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_sipnner"
                android:entries="@array/complaindesc"
                android:padding="5dip" />

            <com.ttl.customersocialapp.FloatLabelLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/anim_edittext_layout"
                android:paddingLeft="5dp"
                app:floatLabelTextAppearance="@style/myFloatLabel" >

                <EditText
                    android:id="@+id/edit_custVoice"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_layout"
                    android:hint="Customer Voice"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:minLines="2"
                    android:maxLength="100"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/hintcolor" />
            </com.ttl.customersocialapp.FloatLabelLayout>

            <Button
                android:id="@+id/btn_addComplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/white_border_rectangle"
                android:text="ADD COMPLAINT"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginTop="10dip"
                    android:padding="5dip"
                    android:src="@drawable/left_lightarrow"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dip"
                    android:padding="5dip"
                    android:src="@drawable/right_darkarrow"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/right"
                    android:layout_toRightOf="@+id/left" >

                    <TableLayout
                        android:id="@+id/tableLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </TableLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5dip"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_border_rectangle"
                android:text="RESET"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_boookService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/white_border_rectangle"
                android:text="SUBMIT"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>