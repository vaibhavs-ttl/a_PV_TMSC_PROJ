<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ttl.customersocialapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#EEF2F5"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/dialogtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgclose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.ttl.customersocialapp.FloatLabelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/anim_edittext_layout"
            android:paddingLeft="10dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >

            <EditText
                android:id="@+id/txtoldpass"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" />
        </com.ttl.customersocialapp.FloatLabelLayout>

        <com.ttl.customersocialapp.FloatLabelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/anim_edittext_layout"
            android:paddingLeft="10dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >

            <EditText
                android:id="@+id/txtnewpass"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:maxLength="15"
                
                android:hint="New Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" >
            </EditText>
        </com.ttl.customersocialapp.FloatLabelLayout>

        <LinearLayout
            android:id="@+id/linpasswordlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtpasswordpolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/passwordpolicydialog"
                android:textColor="@color/black" />
        </LinearLayout>

        <com.ttl.customersocialapp.FloatLabelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/anim_edittext_layout"
            android:paddingLeft="10dp"
            app:floatLabelTextAppearance="@style/myFloatLabel" >

            <EditText
                android:id="@+id/txtconfpass"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/edittext_layout"
                android:ems="10"
                android:maxLength="15"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true" >
            </EditText>
        </com.ttl.customersocialapp.FloatLabelLayout>

        <Button
            android:id="@+id/visit_site"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_submit"
            android:text="SUBMIT"
            android:textColor="#F5F5F5"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>