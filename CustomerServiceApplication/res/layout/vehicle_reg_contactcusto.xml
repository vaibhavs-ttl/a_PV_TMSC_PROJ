<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="top|center"
	android:layout_gravity="center"
    android:background="#EEF2F5" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@color/yellow">
	        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Vehicle Registration"
	        android:textSize="20sp"
	        android:paddingLeft="20dp"
	        android:paddingTop="15dp"
	        android:textColor="#000000"/>
	    
	    <ImageView
	        android:id="@+id/imgclose"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/close"
	        android:scaleType="fitXY" />
	
	</RelativeLayout>
	
    	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="top|center">
		    
	    	       <TextView 
				        android:id="@+id/txtregno"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="(Reg.No: MH05 AQ 4578)"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:textSize="13sp"
				        android:textColor="@color/black"
				        android:layout_marginTop="10dp"/>
	    	   	   
			             <Button
				            android:id="@+id/btndealer"
				            android:layout_marginTop="30dp"
				            android:layout_width="250dp"
				            android:layout_height="wrap_content"
				            android:textColor="#F5F5F5"
				            android:text="CONTACT YOUR DEALER"
				            android:textSize="15sp"				           
				            android:background="@drawable/button_submit"/>
			    		
			               <Button
				            android:id="@+id/btncustomer"
				            android:layout_marginTop="10dp"
				            android:layout_width="250dp"
				            android:layout_height="wrap_content"
				            android:textColor="#F5F5F5"
				            android:text="CONTACT CUSTOMER CARE"
				            android:textSize="15sp"
				            android:background="@drawable/button_submit"
				            android:layout_marginBottom="20dp" />
	</LinearLayout>
</LinearLayout>
