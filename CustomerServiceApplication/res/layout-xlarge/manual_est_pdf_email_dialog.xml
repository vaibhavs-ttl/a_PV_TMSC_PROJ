<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:layout_gravity="center"
    android:background="#EEF2F5" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@color/yellow">
	        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:text="Send Email"
	        android:layout_marginLeft="12dp"
	        
	       
	        android:gravity="center"
	        android:textSize="20dp"
	        android:textColor="#000000"/>
	    
	    <ImageView
	        android:id="@+id/dismissDialogBtn"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/close"
	       	android:visibility="invisible"
	        android:scaleType="fitXY" />
	
	</RelativeLayout>
	
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="top|center"
	   >

		<TextView
        android:layout_width="match_parent"
       	 android:layout_height="wrap_content"
       
        android:padding="20dp"
        android:textColor="@color/black"
        android:text="Please enter Email ID to send PDF Report."
        android:textSize="16sp"/>
	
		<EditText
		    android:id="@+id/email_invoice_box"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:ems="10"
		    android:singleLine="true"
	    	android:paddingLeft="10dp"
		    android:paddingRight="10dp"
				android:inputType="textEmailAddress"
		    android:background="@drawable/anim_edittext_layout"
		    android:hint="Email ID"
		    
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"/>

		<!-- <CheckBox
		    android:id="@+id/checkBox1"
		    android:layout_width="wrap_content"
		    android:layout_height="60dp"
		    android:text="@string/terms"/> -->

<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    
    >
    <Button
		    android:id="@+id/mail_invoice_btn"
		    android:layout_width="250dp"
		    android:layout_height="50dp"
		   
		    android:background="@drawable/button_submit"
		    android:text="Submit"
		   android:layout_marginLeft="50dp"
		    
		    android:textColor="#F5F5F5"
		    android:textSize="15sp" />
	
		
	<Button
		    android:id="@+id/mail_invoice_cancel_btn"
		    android:layout_width="250dp"
		    android:layout_height="50dp"
	android:layout_marginLeft="50dp"
		    android:background="@drawable/button_submit"
		    android:text="Cancel"
		   
		    
		    android:textColor="#F5F5F5"
		    android:textSize="15sp" />
	
    
    
    
    
</LinearLayout>
		
		
		
		
		
	</LinearLayout>


</LinearLayout>
