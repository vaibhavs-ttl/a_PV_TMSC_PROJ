<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
android:id="@+id/custom_parent_row"
     >
     <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        
        android:background="@color/white"/>

    <TextView
        android:id="@+id/selected_spare_labour_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        
        android:ellipsize="end"
        android:padding="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/type"
        android:textSize="15dp" />
    <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/selected_spare_labour_desc"
        android:layout_width="0dp"
       android:layout_height="wrap_content"
        android:layout_weight="1"
        
        android:ellipsize="end"
        android:padding="5dp"  
        android:textColor="@color/white"    
        android:text="@string/desc"
        android:gravity="center"
        
        android:textSize="10sp" />
    <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>

    <EditText
        android:id="@+id/selected_spare_labour_qty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:ellipsize="end"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:text="@string/qty"
        android:textColor="@color/white"
        android:textSize="10sp" >

        <requestFocus />
    </EditText>

<View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>
    
    <TextView
        android:id="@+id/selected_spare_labour_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.4"
       
        
        android:padding="5dp"
    android:textColor="@color/white"
        android:text="@string/value"
        android:ellipsize="end"
        android:textSize="10sp" />
    
    <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>
    
   <ImageView 
       
       android:id="@+id/selected_spare_labour_editbox"
        android:layout_width="0dp"
        android:layout_height="45dp"
         android:layout_weight="0.5"
         android:layout_gravity="center"
        android:src="@drawable/edit_white"
      
       
       />
   
   
   <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>
      <ImageView 
       
       android:id="@+id/selected_spare_labour_deletebox"
        android:layout_width="0dp"
        android:layout_height="45dp"
         android:layout_weight="0.5"
        android:layout_gravity="center"
        android:src="@drawable/cancel_white"	
        
       
       />
      <View 
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"/>
    
    
    
    
    
</LinearLayout>
