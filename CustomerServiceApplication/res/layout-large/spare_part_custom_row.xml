<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:id="@+id/sparePartRow"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/spare_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/desc"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/spare_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/default_qty"
        android:textSize="15sp" />

    
<TextView
        android:id="@+id/spare_uom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/uom"
        android:textSize="15sp" />

    
    
    
<LinearLayout android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/cell_shape">

    <CheckBox
        android:id="@+id/spare_select_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:button="@drawable/estimate_state_check"
         android:saveEnabled="true"
        android:padding="10dp" />
    </LinearLayout>

</LinearLayout>