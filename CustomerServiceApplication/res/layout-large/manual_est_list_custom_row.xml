<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
android:id="@+id/custom_parent_row"
     >

    <TextView
        android:id="@+id/selected_spare_labour_type"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/type"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/selected_spare_labour_desc"
        android:layout_width="0dp"
       android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
      
        android:text="@string/desc"
        android:gravity="center"
        android:textSize="15sp" />

    
<EditText
        android:id="@+id/selected_spare_labour_qty"
        android:layout_width="0dp"
     	android:layout_height="50dp"
        android:layout_weight="0.4"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:padding="10dp"
        android:gravity="center"
        android:enabled="false"
        android:singleLine="true"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:text="@string/qty"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/selected_spare_labour_value"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.54"
        android:background="@drawable/cell_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/value"
        android:textSize="15sp" />
    
   <ImageView 
       
       android:id="@+id/selected_spare_labour_editbox"
        android:layout_width="0dp"
        android:layout_height="50dp"
         android:layout_weight="0.5"
        android:src="@drawable/edit_white"
       android:background="@drawable/cell_shape"  
        
       
       />
      <ImageView 
       
       android:id="@+id/selected_spare_labour_deletebox"
        android:layout_width="0dp"
        android:layout_height="50dp"
         android:layout_weight="0.5"
        android:background="@drawable/cell_shape"
        android:src="@drawable/cancel_white"	
        
       
       />
    
    
    
    
    
</LinearLayout>
